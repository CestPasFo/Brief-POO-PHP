{% extends 'base.html.twig' %}

{% block title %}Championship Results{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center mb-4">üèÜ Championship Results</h1>

    <section class="mb-5">
        <h2 class="text-primary">Player Scores</h2>
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>Player Type</th>
                        <th>Total Score</th>
                        <th>Average Score</th>
                    </tr>
                </thead>
                <tbody>
                    {% for playerType, score in scoresByStrategy %}
                        <tr>
                            <td>{{ playerType }}</td>
                            <td>{{ score }}</td>
                            <td>{{ averageScoresByStrategy[playerType]|number_format(2) }}</td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="3" class="text-center text-muted">No data available</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </section>

    <section>
        <h2 class="text-primary">Match Results</h2>
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>Iteration</th>
                        <th>Player 1</th>
                        <th>Player 2</th>
                        <th>Result</th>
                    </tr>
                </thead>
                <tbody>
                    {% for match in matches %}
                        <tr>
                            <td>{{ match.iteration }}</td>
                            <td>{{ match.player1 }}</td>
                            <td>{{ match.player2 }}</td>
                            <td>{{ match.result.player1Score }} - {{ match.result.player2Score }}</td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4" class="text-center text-muted">No matches played yet</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </section>

    <!-- Summary Section -->
    <section class="mt-5 text-center">
        <p class="text-success fw-bold">Total Cooperations: {{ sumCooperates }}</p>
        <p class="text-danger fw-bold">Total Cheats: {{ sumCheats }}</p>
    </section>

</div>
{% endblock %}
